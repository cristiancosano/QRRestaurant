<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/header') %>
    <title>QrRestaurant</title>
</head>
<body>
    <%- include('../partials/primaryMenu') %>

    <div class="container mt-5">
        <h2>Editar restaurante</h2>
        <form action="/restaurants/<%= id %>/update " method="post" class="mt-3">
            <input type="text" name="name" id="name" placeholder="Nombre del restaurante" class="form-control" value="<%= name %>">
            <input type="number" name="capacity" id="capacity" placeholder="Aforo" class="form-control mt-3" value="<%= capacity %>">
            <input type="text" name="address" id="address" placeholder="Dirección" class="form-control mt-3" value="<%= address %>">
            <input type="text" name="city" id="city" placeholder="Localidad" class="form-control mt-3" value="<%= city %>">
            <input type="text" name="description" id="description" placeholder="Descripción" class="form-control mt-3">
            <label for="typeOfFood" class="form-label mt-3">Tipo de comida:</label>
            <select id="typeOfFood" class="form-select" name="foodType">
                <% foodTypes.forEach(foodType => {%>
                        <option value="<%=foodType.id%>"><%=foodType.name%></option>
                <%}); %>
            </select>
            <div class="mt-3">
                <label for="restaurantMenu" class="form-label">Carta</label>
                <input class="form-control" type="file" id="restaurantMenu">
            </div>

            <div class="mt-3">
                <label for="restaurantLogo" class="form-label">Logo</label>
                <input class="form-control" type="file" id="restaurantLogo">
            </div>

            <div class="d-grid gap-2 mb-3">
                <button class="btn btn-primary mt-5 mb-5" type="submit">Confirmar cambios</button>
            </div>
        </form>
    </div>

    
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>