<body>
    <%- include('../partials/primaryMenu') %>

    <div class="container mt-5">
        <h2>A침adir nuevo restaurante</h2>
        <form action="/restaurants/store" method="post" class="mt-3" enctype="multipart/form-data">
            <input type="text" name="name" id="name" placeholder="Nombre del restaurante" class="form-control">
            <input type="number" name="capacity" id="capacity" placeholder="Aforo" class="form-control mt-3">
            <input type="text" name="address" id="address" placeholder="Direcci칩n" class="form-control mt-3">
            <input type="text" name="city" id="city" placeholder="Localidad" class="form-control mt-3">
            <input type="text" name="description" id="description" placeholder="Descripci칩n" class="form-control mt-3">
            <label for="typeOfFood" class="form-label mt-3">Tipo de comida:</label>
            <select id="typeOfFood" class="form-select" name="foodType">
                <% foodTypes.forEach(foodType => {%>
                        <option value="<%=foodType.id%>"><%=foodType.name%></option>
                <%}); %>
            </select>
            <div class="mt-3">
                <label for="restaurantMenu" class="form-label">Carta</label>
                <input class="form-control" type="file" id="restaurantMenu" name="restaurantMenu">
            </div>

            <div class="mt-3">
                <label for="restaurantLogo" class="form-label">Logo</label>
                <input class="form-control" type="file" id="restaurantLogo" name="photos" multiple>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button class="btn btn-primary mt-5 mb-5" type="submit">A침adir restaurante</button>
            </div>
        </form>
    </div>

    
    <%- include('../partials/footer') %>
