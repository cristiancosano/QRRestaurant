<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/header') %>
    <title>Login</title>
</head>
<body>
    <%- include('../partials/primaryMenu') %>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <% if(typeof message !='undefined'){%>
                            <%- include("../partials/alert", {type:"success", message}) %> 
                        <%}%> 
                        <form id="login-form" class="form" action="" method="post">
                            <h3 class="text-center">Crear nueva cuenta</h3> 
                            <div class="mb-3">
                                <label for="dni" class="form-label">DNI:</label><br>
                                <input type="text" name="dni" id="dni" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label><br>
                                <input type="email" name="email" id="email" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Contraseña:</label><br>
                                <input type="password" name="password" id="password" class="form-control" required>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrarse</button>
                            </div>
                            <div class="text-center">
                                <a href="/login" class="text-muted text-decoration-none">¿Ya tienes cuenta? Inicia sesión aquí</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts') %>   
</body>
</html>
