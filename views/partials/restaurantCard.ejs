                <i class="bi bi-trash"></i> Eliminar restaurante
            </button>
            
            <%- include('./modal', {
                id: 'restaurant'+id, 
                title: 'Eliminar "'+name+'"',
                description: 'Â¿Seguro que quieres eliminar el restaurante '+name+'?',
                cancel: 'Cancelar',
                confirm: 'Si, eliminar',
                confirmColor: 'danger',
                cancelColor: 'secondary',
                action: '/restaurants/'+id+'/delete',
                method: 'post'
            })%>
        </div>
        <% } %>
    </div>
